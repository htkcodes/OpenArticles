<h1 class="display-4">Articles</h1>
<table class="table table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Title</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% articles.forEach(function(article){%>
            <tr>
                <td><%= article.id %></td>
                <td><%= article.Title %></td>
                <td
                >
            <a href="/openarticles/edit/<%= article.id %>" class="btn btn-primary">EDIT</a>
            <form action="/openarticles/delete/<%= article.id %>" method="POST" class="d-inline">
            <input type="submit" class="btn btn-danger" value="delete">
            </form>
            </td>
            </tr>
        <%})%>
    </tbody>
</table>